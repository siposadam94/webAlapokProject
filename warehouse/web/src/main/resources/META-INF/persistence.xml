<persistence xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="persistence">
        <description>Hibernate Entity Manager Example</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
                <class>hu.siposadam.entity.Product</class>
                <class>hu.siposadam.entity.Unit</class>
                <class>hu.siposadam.entity.Category</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:product"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value="sa"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="show_sql" value="true"/>
<!--            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>-->
<!--            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" />-->

        </properties>
    </persistence-unit>
</persistence>



